@model InventorySystem.Models.Inventory.Facility

@{
	ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
	<h4>Facility</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.FacilityName)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.FacilityName)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Landmark)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Landmark)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Address)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Address)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.City)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.City)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.State)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.State)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.ZipCode)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.ZipCode)
		</dd>


		<dt>
			@Html.DisplayNameFor(model => model.Resources)
		</dt>
		<dd>
			<table class="table">
				<tr>
					<th>Resource Name</th>
					<th>Quantity</th>
				</tr>
				@foreach (var item in Model.Resources)
				{
					<tr>
						<td>@Html.DisplayFor(model => item.ResourceName)</td>
						<td>@Html.DisplayFor(model => item.Quantity)</td>
					</tr>

				}
			</table>
		</dd>



	</dl>
</div>
